---
printWidth: 120
tabWidth: 4
useTabs: false
semi: true
singleQuote: true
quoteProps: preserve
jsxSingleQuote: false
trailingComma: all
bracketSpacing: true
bracketSameLine: false
arrowParens: avoid
requirePragma: false
insertPragma: false
proseWrap: preserve
vueIndentScriptAndStyle: true
endOfLine: lf
embeddedLanguageFormatting: auto
experimentalTernaries: true
plugins:
    - prettier-plugin-svelte
overrides: 
    - { "files": "*.svelte", "options": { "parser": "svelte" } }
